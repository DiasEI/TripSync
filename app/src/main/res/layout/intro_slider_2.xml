<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="408dp"
        android:layout_height="459dp"
        android:scaleType="centerCrop"
        android:src="@drawable/slide1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="330dp"
        android:layout_height="93dp"
        android:layout_marginEnd="52dp"
        android:fontFamily="@font/nunito_bold"
        android:gravity="center_horizontal"
        android:text="Adicione e partilhe as suas viagens connosco!"
        android:textColor="@color/def"
        android:textSize="27dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView2"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="295dp"
        android:layout_height="100dp"
        android:layout_marginEnd="52dp"
        android:fontFamily="@font/nunito_bold"
        android:gravity="center_horizontal"
        android:text="Adicione e partilhe as suas viagens connosco! Pode criar o seu perfil e editar as suas informações sempre que desejado."
        android:textColor="@color/def"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        android:layout_marginTop="18dp" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="303dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Continuar"
        android:textSize="18sp"
        android:backgroundTint="@color/def"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        android:layout_marginTop="20dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
