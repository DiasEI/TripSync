<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".fragments.Viagens">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="?attr/selectableItemBackground">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/def"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/sv1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linearLayout1">

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ViewFlipper
                android:id="@+id/foto"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"/>

            <!-- Descrição -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tv_descricao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/desc"
                    android:textColor="@color/def"
                    android:fontFamily="@font/nunito_bold"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tvDescricao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descrição"
                    android:textColor="@color/def"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="8dp"/>


            </LinearLayout>

            <!-- Localização -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/location"
                    android:layout_marginEnd="8dp"/>


                <TextView
                    android:id="@+id/tvCidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cidade"
                    android:textSize="14sp"
                    android:textColor="@color/def"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvPais"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="País"
                    android:textSize="14sp"
                    android:textColor="@color/def"/>
            </LinearLayout>

            <!-- Data de Início -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvDataInicioLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data de Início"
                    android:textColor="@color/def"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvDataInicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Início: "
                    android:textColor="@color/def"
                    android:textSize="18sp"/>
            </LinearLayout>

            <!-- Data de Fim -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvDataFimLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data de Fim"
                    android:textColor="@color/def"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvDataFim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fim: "
                    android:textColor="@color/def"
                    android:textSize="18sp"/>
            </LinearLayout>

            <!-- Título Classificação -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Classificação"
                android:textColor="@color/def"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/tvClassificacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Classificação: "
                android:textColor="@color/def"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvCustosLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Custos"
                    android:textColor="@color/def"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvCustos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Custos: "
                    android:textColor="@color/def"
                    android:textSize="18sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_visitar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visitar"
                android:textColor="@color/def"
                android:textSize="20sp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:background="?attr/selectableItemBackground"
                android:padding="12dp"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>