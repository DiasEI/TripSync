<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditViagemFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/editViagem"
                    android:textColor="@color/def"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:fontFamily="@font/nunito_bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Título"
                android:textColor="@color/def"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_bold"
                android:layout_below="@+id/btnVoltar"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/et_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_titulo"
                android:background="@drawable/round_edit_text"
                android:padding="10dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tv_descricao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descrição"
                android:textColor="@color/def"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_bold"
                android:layout_below="@+id/et_titulo"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/et_descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_descricao"
                android:background="@drawable/round_edit_text"
                android:padding="10dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tv_cidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cidade"
                android:textColor="@color/def"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_bold"
                android:layout_below="@+id/et_descricao"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/et_cidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_cidade"
                android:background="@drawable/round_edit_text"
                android:padding="10dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tv_pais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="País"
                android:textColor="@color/def"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_bold"
                android:layout_below="@+id/et_cidade"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/et_pais"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_pais"
                android:background="@drawable/round_edit_text"
                android:padding="10dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tv_inicio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Início"
                android:textColor="@color/def"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_bold"
                android:layout_below="@+id/et_pais"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/et_inicio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_inicio"
                android:background="@drawable/round_edit_text"
                android:padding="10dp"
                android:layout_marginTop="8dp"
                android:focusable="false"
                android:clickable="true" />

            <TextView
                android:id="@+id/tv_fim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data Fim"
                android:textColor="@color/def"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_bold"
                android:layout_below="@+id/et_inicio"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/et_fim"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_fim"
                android:background="@drawable/round_edit_text"
                android:padding="10dp"
                android:layout_marginTop="8dp"
                android:focusable="false"
                android:clickable="true" />

            <TextView
                android:id="@+id/tv_custos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Custos"
                android:textColor="@color/def"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_bold"
                android:layout_below="@+id/et_fim"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/et_custos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_custos"
                android:background="@drawable/round_edit_text"
                android:padding="10dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tv_class"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Classificação"
                android:textColor="@color/def"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_bold"
                android:layout_below="@+id/et_custos"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/et_class"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_class"
                android:background="@drawable/round_edit_text"
                android:padding="10dp"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/tv_imagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Imagem"
                android:textColor="@color/def"
                android:textSize="16sp"
                android:fontFamily="@font/nunito_bold"
                android:layout_below="@+id/et_class"
                android:layout_marginTop="16dp" />

            <ImageView
                android:id="@+id/btn_ficheiros"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/tv_imagem"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:layout_below="@id/btn_ficheiros"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/def" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
