<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/def"
                android:text="@string/app_name"
                android:paddingVertical="30dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/username"
                android:textColor="@color/def"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@+id/title"
                android:paddingHorizontal="50dp"
                android:paddingVertical="10dp"/>

            <EditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="95dp"
                android:layout_below="@+id/tv_username"
                android:background="@drawable/round_edit_text"
                android:paddingVertical="5dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/tv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pass"
                android:textColor="@color/def"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/et_username"
                android:paddingHorizontal="50dp"
                android:paddingVertical="10dp"/>

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="95dp"
                android:layout_below="@+id/tv_password"
                android:background="@drawable/round_edit_text"
                android:paddingVertical="5dp"
                android:layout_centerHorizontal="true"
                android:radius="10dp"
                android:inputType="textPassword"/>

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textColor="@color/def"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/et_password"
                android:paddingHorizontal="50dp"
                android:paddingVertical="10dp"/>

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="95dp"
                android:layout_below="@+id/tv_email"
                android:layout_centerHorizontal="true"
                android:background="@drawable/round_edit_text"
                android:inputType="textEmailAddress"
                android:paddingVertical="5dp"
                android:radius="10dp"/>

            <TextView
                android:id="@+id/tv_tele"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tel"
                android:textColor="@color/def"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/et_email"
                android:paddingHorizontal="50dp"
                android:paddingVertical="10dp"/>

            <EditText
                android:id="@+id/et_tele"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="95dp"
                android:layout_below="@+id/tv_tele"
                android:background="@drawable/round_edit_text"
                android:paddingVertical="5dp"
                android:layout_centerHorizontal="true"
                android:radius="10dp"/>

            <TextView
                android:id="@+id/tv_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nome"
                android:textColor="@color/def"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@id/et_tele"
                android:paddingHorizontal="50dp"
                android:paddingVertical="10dp"/>

            <EditText
                android:id="@+id/et_nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="95dp"
                android:layout_below="@+id/tv_nome"
                android:background="@drawable/round_edit_text"
                android:paddingVertical="5dp"
                android:layout_centerHorizontal="true"
                android:radius="10dp"/>

            <Button
                android:id="@+id/btn_foto"
                android:textSize="14sp"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/def"
                android:text="@string/selectFoto"
                android:layout_below="@+id/et_nome"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"/>

            <Button
                android:id="@+id/btn_criar_conta"
                android:gravity="center"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:backgroundTint="@color/def"
                android:text="@string/criaruser"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btn_foto"
                android:layout_marginTop="20dp"/>

            <Button
                android:id="@+id/btn_voltar"
                android:gravity="center"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:backgroundTint="@color/def"
                android:text="@string/voltar"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btn_criar_conta"
                android:layout_marginTop="10dp"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>