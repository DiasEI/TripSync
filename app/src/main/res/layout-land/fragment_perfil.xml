<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="40dp"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:id="@+id/btn_voltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:background="@color/none"
            android:paddingEnd="35dp"
            android:src="@drawable/vector__1_" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:layout_marginStart="200dp"
            android:textColor="@color/def"
            android:fontFamily="@font/nunito_bold"
            android:textSize="30sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/profile_photo"
        android:layout_below="@+id/ll_1"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:contentDescription="@string/foto"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle_shape"
        android:padding="2dp"/>

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_photo"
        android:layout_marginTop="18dp"
        android:paddingHorizontal="50dp"
        android:paddingVertical="10dp"
        android:layout_marginLeft="160dp"
        android:text="@string/username"
        android:textColor="@color/def"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_username"
        android:background="@drawable/round_edit_text"
        android:paddingVertical="5dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_username"
        android:layout_marginTop="2dp"
        android:paddingHorizontal="50dp"
        android:paddingVertical="10dp"
        android:layout_marginLeft="160dp"
        android:text="@string/nome"
        android:textColor="@color/def"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_nome"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_nome"
        android:background="@drawable/round_edit_text"
        android:paddingVertical="5dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tv_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_nome"
        android:layout_marginTop="2dp"
        android:paddingHorizontal="50dp"
        android:paddingVertical="10dp"
        android:text="@string/tel"
        android:textColor="@color/def"
        android:textSize="18sp"
        android:layout_marginLeft="160dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/et_tel"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tel"
        android:background="@drawable/round_edit_text"
        android:paddingVertical="5dp"
        android:layout_centerHorizontal="true"
        android:radius="10dp"/>

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_tel"
        android:layout_marginTop="2dp"
        android:paddingHorizontal="50dp"
        android:paddingVertical="10dp"
        android:text="@string/email"
        android:textColor="@color/def"
        android:textSize="18sp"
        android:layout_marginLeft="160dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_email"
        android:background="@drawable/round_edit_text"
        android:paddingVertical="5dp"
        android:layout_centerHorizontal="true"
        android:radius="10dp"/>

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_email"
        android:layout_marginTop="2dp"
        android:paddingHorizontal="50dp"
        android:paddingVertical="10dp"
        android:text="@string/pass"
        android:textColor="@color/def"
        android:textSize="18sp"
        android:layout_marginLeft="160dp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_password"
        android:background="@drawable/round_edit_text"
        android:paddingVertical="5dp"
        android:layout_centerHorizontal="true"
        android:radius="10dp"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btnphoto"
        android:gravity="center"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:backgroundTint="@color/def"
        android:text="@string/editFoto"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_password"
        android:layout_marginTop="30dp"/>
    <Button
        android:id="@+id/btnGuarda"
        android:gravity="center"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:backgroundTint="@color/def"
        android:text="@string/guardar"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnphoto"
        android:layout_marginTop="15dp"/>

</RelativeLayout>
</ScrollView>